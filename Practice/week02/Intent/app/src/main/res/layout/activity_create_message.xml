<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateMessengerActivity">

    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="21dp"
        android:onClick="onSendMessage"
        android:text="@string/send" />

    <EditText
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send"
        android:layout_alignLeft="@+id/send"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:ems="10" />

    <Button
        android:id="@+id/sendToApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message"
        android:layout_alignLeft="@id/message"
        android:layout_marginTop="21dp"
        android:onClick="onSendMessageToOtherApp"
        android:text="@string/sendToApp" />

    <Button
        android:id="@+id/sendToToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sendToApp"
        android:layout_alignLeft="@id/sendToApp"
        android:layout_marginTop="21dp"
        android:onClick="onSendMessageToToast"
        android:text="@string/sendToToast" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="onSendMessageToToast"
        android:src="@android:drawable/ic_dialog_email"
        />


</RelativeLayout>